@model IEnumerable<mvcWithEntityF.Models.Employee>
@using mvcWithEntityF.Models;
@{
    ViewBag.Title = "EmployeeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EmployeeList</h2>
<h2>@Html.ActionLink("Create New","Create")</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th></th>
    </tr>

    @foreach(Employee emp in @Model)
    {
    <tr>
        <td>
            @emp.Name
        </td>
        <td>
           @emp.Gender
        </td>
        <td>
            @emp.City
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = @emp.EmployeeId }) |
            @Html.ActionLink("Details", "index", new { id = @emp.EmployeeId }) |
            @Html.ActionLink("Delete", "Delete", new { id = @emp.EmployeeId })
        </td>
    </tr>

    }
</table>
